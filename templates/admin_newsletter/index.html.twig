{% extends 'base.html.twig' %}

{% block title %}ZEUS EX MACHINA : Liste de la Newsletter{% endblock %}

{% block body %}
    <h1>Newsletter index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>N°</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Mail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for newsletter in newsletters %}
            <tr>
                <td>{{ newsletter.id }}</td>
                <td>{{ newsletter.prenom }}</td>
                <td>{{ newsletter.nom }}</td>
                <td>{{ newsletter.mail }}</td>
                <td>
                    <a href="{{ path('admin_newsletter_show', {'id': newsletter.id}) }}">Détails</a>
                    <a href="{{ path('admin_newsletter_edit', {'id': newsletter.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune entrée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_newsletter_new') }}">Ajouter une nouvelle Newsletter</a>
{% endblock %}