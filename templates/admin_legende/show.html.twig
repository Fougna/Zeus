{% extends 'base.html.twig' %}

{% block title %}ADMINISTRATION : Liste des Légendes{% endblock %}

{% block body %}
    <h1>Liste des Légendes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Fiche n°</th>
                <td>{{ legende.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ legende.titre }}</td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ legende.resume }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ legende.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_legende_index') }}">Retour à la liste</a>

    <a href="{{ path('admin_legende_edit', {'id': legende.id}) }}">Modifier</a>

    {{ include('admin_legende/_delete_form.html.twig') }}
