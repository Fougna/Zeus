{% extends 'base.html.twig' %}

{% block title %}Legende index{% endblock %}

{% block body %}
    <h1>Legende index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Resume</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for legende in legendes %}
            <tr>
                <td>{{ legende.id }}</td>
                <td>{{ legende.titre }}</td>
                <td>{{ legende.resume }}</td>
                <td>{{ legende.image }}</td>
                <td>
                    <a href="{{ path('admin_legende_show', {'id': legende.id}) }}">show</a>
                    <a href="{{ path('admin_legende_edit', {'id': legende.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_legende_new') }}">Create new</a>
{% endblock %}
