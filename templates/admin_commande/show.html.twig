{% extends 'base.html.twig' %}

{% block title %}ADMINISTRATION : Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>N°</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ commande.creation ? commande.creation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Référence</th>
                <td>{{ commande.reference }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_commande_index') }}">Retour à la liste</a>

    <a href="{{ path('admin_commande_edit', {'id': commande.id}) }}">Modifier</a>

    {{ include('admin_commande/_delete_form.html.twig') }}
{% endblock %}