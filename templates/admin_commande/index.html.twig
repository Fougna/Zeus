{% extends 'base.html.twig' %}

{% block title %}ADMINISTRATION : Liste des Commandes{% endblock %}

{% block body %}
    <h1>Liste des Commandes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>N°</th>
                <th>Date de création</th>
                <th>Référence</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.creation ? commande.creation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commande.reference }}</td>
                <td>
                    <a href="{{ path('admin_commande_show', {'id': commande.id}) }}">Afficher</a>
                    <a href="{{ path('admin_commande_edit', {'id': commande.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune entrée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_commande_new') }}">Nouvelle Commande</a>
{% endblock %}
