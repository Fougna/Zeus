{% extends 'base.html.twig' %}

{% block title %}ADMINISTRATION : Liste des Catégories de Personnage{% endblock %}

{% block body %}
    <h1>Liste des Catégories de Personnage</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Nom</th>
                <th>Présentation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie_personnage in categorie_personnages %}
            <tr>
                <td><img class="w-25" src="{{ asset('uploads/' ~ categorie_personnage.image) }}" alt=""></td>
                <td>{{ categorie_personnage.nom }}</td>
                <td>{{ categorie_personnage.presentation }}</td>
                <td>
                    <a href="{{ path('admin_categoriepersonnage_show', {'id': categorie_personnage.id}) }}">show</a>
                    <a href="{{ path('admin_categoriepersonnage_edit', {'id': categorie_personnage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune entrée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_categoriepersonnage_new') }}">Nouvelle Catégorie</a>
{% endblock %}