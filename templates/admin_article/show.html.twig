{% extends 'base.html.twig' %}

{% block title %}ADMINISTRATION : Article{% endblock %}

{% block body %}
    <h1>{{ article.titre }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Fiche n°</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Couverture</th>
                <td><img class="w-50" src="{{ asset('uploads/' ~ article.image) }}" alt=""></td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ article.prix }}</td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ article.resume }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_article_index') }}">Retour à la liste</a>
    <br>
    <a href="{{ path('admin_article_edit', {'id': article.id}) }}">Modifier</a>

    {{ include('admin_article/_delete_form.html.twig') }}
{% endblock %}